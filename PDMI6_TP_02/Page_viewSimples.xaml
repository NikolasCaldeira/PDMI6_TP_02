<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDMI6_TP_02.Page_viewSimples" Title="Fonte Simples">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Nome}" TextColor="Red"/>
            <Label Text="{Binding Idade}" TextColor="Red"/>
            <Label Text="{Binding Profissao}" TextColor="Red"/>
            <Label Text="{Binding Pais}" TextColor="Red"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>